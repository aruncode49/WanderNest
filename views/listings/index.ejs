<% layout('/layouts/boilerplate') -%>

<style>
  #filters {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    overflow-x: hidden;
    overflow-x: scroll;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    margin-top: 1.5rem;
    text-align: center;
    opacity: 0.7;
  }

  .filter p {
    font-size: 0.8rem;
    width: 100%;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .tax-switch {
    display: flex;
    align-items: center;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    width: fit-content;
    padding-inline: 1rem;
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .form-check-input {
    margin-left: 1rem !important;
  }

  @media screen and (max-width: 500px) {
    .tax-switch {
      justify-content: center;
      width: auto;
    }
  }
</style>

<body>
  <!-- filters -->
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castels</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tractor"></i>
      <p>Farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-palette"></i>
      <p>Creative Spaces</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-golf-ball-tee"></i>
      <p>Golfing</p>
    </div>
  </div>

  <!-- tax switch filter -->
  <div class="tax-switch">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 mt-3">
    <% allListings.forEach(listing => { %>
    <a class="card-container" href="/listings/<%= listing._id %>">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <span class="card-title text-capitalize"><%= listing.title %></span>
            <br />
            â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</body>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  const taxInfo = document.getElementsByClassName("tax-info");
  taxSwitch.addEventListener("click", () => {
    for (info of taxInfo) {
      if (info.style.display != "inline") info.style.display = "inline";
      else info.style.display = "none";
    }
  });
</script>
