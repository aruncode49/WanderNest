<% layout('/layouts/boilerplate') -%>

<style>
  #filters {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    overflow-x: hidden;
    overflow-x: scroll;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
    position: fixed;
    width: 100%;
    background-color: white;
    z-index: 99;
    padding-right: 1.5rem;
  }

  #filters a {
    color: black;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    margin-top: 1.5rem;
    text-align: center;
    opacity: 0.6;
  }

  .filter p {
    font-size: 0.8rem;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  #tax-switch-container {
    width: 100%;
    background-color: white;
    z-index: 99;
    position: fixed;
    margin-top: 5rem;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }

  .tax-switch {
    display: flex;
    align-items: center;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    width: fit-content;
    padding-inline: 1rem;
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .form-check-input {
    margin-left: 1rem !important;
  }

  #listing-container {
    margin-top: 11rem;
  }

  @media screen and (max-width: 500px) {
    #tax-switch-container {
      margin-top: 5rem;
      padding-right: 1.5rem;
    }
    .tax-switch {
      justify-content: center;
      width: auto;
    }
    #listing-container {
      margin-top: 10.5rem;
    }
  }
</style>

<body>
  <!-- filters -->
  <div id="filters">
    <a href="/listings">
      <div class="filter">
        <i class="fa-solid fa-border-all"></i>
        <p>All Listings</p>
      </div>
    </a>

    <a href="/listings/search/trending">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </a>

    <a href="/listings/search/rooms">
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </a>

    <a href="/listings/search/iconic-cities"
      ><div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
      </div>
    </a>

    <a href="/listings/search/mountains">
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
    </a>

    <a href="/listings/search/castles">
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
    </a>

    <a href="/listings/search/amazing-pools">
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
      </div>
    </a>

    <a href="/listings/search/farms">
      <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <p>Farms</p>
      </div>
    </a>

    <a href="/listings/search/camping">
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
    </a>

    <a href="/listings/search/arctic">
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </div>
    </a>

    <a href="/listings/search/beach">
      <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </div>
    </a>

    <a href="/listings/search/creative-spaces">
      <div class="filter">
        <i class="fa-solid fa-palette"></i>
        <p>Creative Spaces</p>
      </div>
    </a>

    <a href="/listings/search/golfing">
      <div class="filter">
        <i class="fa-solid fa-golf-ball-tee"></i>
        <p>Golfing</p>
      </div>
    </a>
  </div>

  <!-- tax switch filter -->
  <div id="tax-switch-container">
    <div class="tax-switch">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <div id="listing-container" class="row row-cols-lg-3 row-cols-md-2">
    <% allListings.forEach(listing => { %>
    <a class="card-container" href="/listings/<%= listing._id %>">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <span class="card-title text-capitalize"><%= listing.title %></span>
            <br />
            â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</body>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  const taxInfo = document.getElementsByClassName("tax-info");
  taxSwitch.addEventListener("click", () => {
    for (info of taxInfo) {
      if (info.style.display != "inline") info.style.display = "inline";
      else info.style.display = "none";
    }
  });
</script>
