<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row mt-3 mb-4">
    <div class="col-md-6 col-lg-8 mx-auto px-4">
      <h3 class="mb-2"><%= listing.title %></h3>
      <div class="card listing-card">
        <img
          src="<%= listing.image %>"
          alt="listing-image"
          class="card-img-top show-img"
        />
        <div class="card-body mt-2">
          <p class="card-text">
            Created by: <i><b><%= listing.owner.username %></b></i> <br />
            <%= listing.description %> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
            <%= listing.location %> <br />
            <%= listing.country %>
          </p>
        </div>
      </div>
      <div class="show-btns mt-2">
        <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit"
          >Edit
        </a>
        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>

      <hr />
      <!-- Review Section -->
      <div class="mt-3 mb-3">
        <h4>Leave A Review</h4>
        <form
          action="/listings/<%= listing._id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mt-2">
            <label class="form-label" for="rating">Rating</label>
            <input
              class="form-range"
              name="review[rating]"
              type="range"
              id="rating"
              min="1"
              max="5"
            />
          </div>

          <div class="mt-2">
            <label class="form-label" for="comment">Comment</label>
            <textarea
              class="form-control"
              name="review[comment]"
              id="comment"
              cols="30"
              rows="5"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please write something to add a review!
            </div>
          </div>
          <button class="btn btn-outline-dark mt-3">Submit</button>
        </form>

        <!-- Show all reviews -->

        <h5 class="mt-5">All Reviews</h5>
        <div class="row mt-3 mx-auto">
          <% listing.reviews.forEach(review => { %>
          <div class="card col-md-5 mx-2 mb-3 p-2">
            <div class="card-body">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text"><small><%= review.comment %></small></p>
              <p class="card-text">
                <% for( let i = 0; i < review.rating; i++ ) { %> ‚≠ê <% } %>
              </p>
            </div>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-sm btn-dark my-2" type="submit">
                Delete
              </button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</body>
